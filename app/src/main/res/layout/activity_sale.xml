<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:columnCount="3"
        android:background="@color/colorBackground"
        android:focusable="true"
        android:focusableInTouchMode="true"

        tools:context="com.mercishoe.mercipos.SaleActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  รายการขาย"
            android:textColor="@color/colorWhite"
            android:layout_columnSpan="3"
            android:background="@color/colorTitle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <ListView
            android:id="@+id/sellitem_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:background="@color/colorWhite"
            android:layout_marginTop="10dp">

        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/add_button"
            android:text="@string/add_name"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/remove_button"
            android:layout_column="2"
            android:text="@string/remove_name"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รวมเงิน :"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:text="รวมรายการ :"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/sum_text"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@color/colorWhite"
            android:text="0"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/item_text"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@color/colorWhite"
            android:layout_column="2"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ส่วนลด :"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <EditText
            android:id="@+id/discount_text"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@color/colorWhite"
            android:layout_column="0"
            android:nextFocusUp="@id/discount_text"
            android:nextFocusLeft="@id/discount_text"
            android:hint="0"
            android:textColor="@color/colorAccent"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <RadioGroup
            android:layout_columnSpan="2"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="40dp">
            <RadioButton
                android:id="@+id/cash_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เงินสด"
                android:textSize="15sp"
                android:textStyle="bold"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/card_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="บัตรเครดิต"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RadioGroup>
        <LinearLayout
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="คงเหลือ :"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/amount_text"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:layout_column="1"
                android:text="0"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/saleOk_button"
            android:layout_columnSpan="1"
            android:layout_column="2"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="เสร็จสิ้น"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>



    </GridLayout>

</ScrollView>
